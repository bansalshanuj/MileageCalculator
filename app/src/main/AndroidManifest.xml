<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.development.shanujbansal.mileagecalc">

    <application
        android:allowBackup="true"
        android:icon="@drawable/background"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddNewEntry"
            android:label="@string/title_activity_add_new_enrty"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".AddVehicle"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewFuelPrices"
            android:label="@string/title_activity_view_fuel_prices"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".ViewMileage"
            android:label="@string/title_activity_view_mileage"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".UpdateFuelPrices"
            android:label="@string/title_activity_update_fuel_prices"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.development.shanujbansal.mileagecalc.AddNewEntry" />
        </activity>
        <activity
            android:name=".HowToUseActivity"
            android:label="@string/title_activity_how_to_use"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.development.shanujbansal.mileagecalc.AddNewEntry" />
        </activity>
        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_start"
            android:launchMode="singleTop">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->
            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
    </application>

</manifest>
